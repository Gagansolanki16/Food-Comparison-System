@model FoodPriceComparison.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="auth-bg auth-bg-login">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 auth-card" data-aos="zoom-in" data-aos-duration="800">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <i class="bi bi-box-arrow-in-right fa-2x mb-2 animate-bounce"></i>
                        <h3 class="fw-bold">Welcome Back</h3>
                        <p class="mb-0">Sign in to your account</p>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Login" method="post" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control form-control-lg hover-glow" placeholder="Enter your email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control form-control-lg hover-glow" placeholder="Enter your password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 hover-lift animate-pulse">
                                <i class="bi bi-arrow-right-circle"></i> Login
                            </button>
                        </form>
                        <hr class="my-4">
                        <p class="text-center">Don't have an account? <a asp-action="Register" class="text-primary fw-bold hover-glow">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>