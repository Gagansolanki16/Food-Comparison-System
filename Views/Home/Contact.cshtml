@{
    ViewData["Title"] = "Contact Us";
}

<div class="container my-5" data-aos="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0" data-aos="zoom-in">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <i class="bi bi-envelope fa-3x text-info mb-4 animate-bounce"></i>
                        <h1 class="display-4 fw-bold text-info">Contact Us</h1>
                        <p class="lead">Have questions or feedback? We'd love to hear from you!</p>
                    </div>
                    <div class="row">
                        <div class="col-md-6" data-aos="fade-right">
                            <h4>Get in Touch</h4>
                            <p><i class="bi bi-geo-alt-fill text-primary"></i> Vadodara, Gujarat, India</p>
                            <p><i class="bi bi-envelope-fill text-primary"></i> support@foodcompare.com</p>
                            <p><i class="bi bi-telephone-fill text-primary"></i> +91 12345 67890</p>
                            <p><i class="bi bi-clock-fill text-primary"></i> Mon-Fri: 9AM-6PM IST</p>
                        </div>
                        <div class="col-md-6" data-aos="fade-left">
                            <form>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control hover-glow" id="name" placeholder="Your Name">
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control hover-glow" id="email" placeholder="your@email.com">
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control hover-glow" id="message" rows="4" placeholder="Your message..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-info w-100 hover-lift">Send Message</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>