@{
    ViewData["Title"] = "Home";
}

<div class="hero">
    <div class="container">
        <h1 class="display-4 fw-bold">Discover the Best Food Prices!</h1>
        <p class="lead">Compare prices across top delivery sites like Swiggy and Zomato in seconds.</p>
        <a asp-controller="Comparison" asp-action="Index" class="btn btn-primary btn-lg mt-3">
            <i class="bi bi-arrow-right-circle"></i> Start Comparing Now
        </a>
    </div>
</div>

<section class="bg-light py-4">
    <div class="container">
        <div class="row text-center justify-content-center">
            <div class="col-md-3 mb-3">
                <i class="fas fa-percent fa-3x text-success mb-2"></i>
                <h3 class="fw-bold text-success">30%</h3>
                <p class="mb-0">Average Savings</p>
            </div>
            <div class="col-md-3 mb-3">
                <i class="fas fa-store fa-3x text-primary mb-2"></i>
                <h3 class="fw-bold text-primary">50+</h3>
                <p class="mb-0">Platforms Covered</p>
            </div>
            <div class="col-md-3 mb-3">
                <i class="fas fa-users fa-3x text-info mb-2"></i>
                <h3 class="fw-bold text-info">1M+</h3>
                <p class="mb-0">Happy Users</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="text-center display-5 fw-bold mb-5 text-dark">Why Choose FoodCompare?</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100 shadow-lg border-0 food-card bg-gradient position-relative overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1600891964599-f61ba0e24092?w=400&h=250&fit=crop" class="card-img-top" alt="Easy Search">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-pizza-slice fa-3x text-warning mb-3 position-absolute top-0 end-0 p-3 bg-white rounded-circle shadow"></i>
                        <h5 class="card-title fw-bold">Easy Search</h5>
                        <p class="card-text">Enter any food item and get instant comparisons</p>
                        <a asp-controller="Comparison" asp-action="Index" asp-route-foodItem="Pizza" class="btn btn-outline-warning btn-sm">Compare Now</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100 shadow-lg border-0 food-card bg-gradient position-relative overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Price Insights">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-wallet fa-3x text-danger mb-3 position-absolute top-0 end-0 p-3 bg-white rounded-circle shadow"></i>
                        <h5 class="card-title fw-bold">Price Insights</h5>
                        <p class="card-text">See the lowest prices and best deals at a glance</p>
                        <a asp-controller="Comparison" asp-action="Index" class="btn btn-outline-danger btn-sm">Compare Now</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100 shadow-lg border-0 food-card bg-gradient position-relative overflow-hidden">
                    <img src="https://tse3.mm.bing.net/th/id/OIP.mR-l-_HqES6XXBvxSk7ILQAAAA?rs=1&pid=ImgDetMain&o=7&rm=3" class="card-img-top" alt="All Foods - Save on any dish">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-utensils fa-3x text-success mb-3 position-absolute top-0 end-0 p-3 bg-white rounded-circle shadow"></i>
                        <h5 class="card-title fw-bold">Real-Time Data</h5>
                        <p class="card-text">Up-to-date prices from trusted delivery platforms</p>
                        <a asp-controller="Comparison" asp-action="Index" class="btn btn-outline-success btn-sm">Compare Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>