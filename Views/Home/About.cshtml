@{
    ViewData["Title"] = "About Us";
}

<div class="container my-5" data-aos="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0" data-aos="zoom-in">
                <div class="card-body p-5 text-center">
                    <i class="bi bi-info-circle fa-3x text-primary mb-4 animate-bounce"></i>
                    <h1 class="display-4 fw-bold text-primary mb-4">About FoodCompare</h1>
                    <p class="lead mb-4">
                        FoodCompare is your go-to platform for comparing food prices across top delivery sites like Swiggy and Zomato.
                        We help you save money and time by providing instant price comparisons, ensuring you get the best deals on your favorite dishes.
                    </p>
                    <p class="mb-4">
                        Our mission is to make food ordering smarter and more affordable. With real-time data and user-friendly tools, we empower food lovers to make informed decisions.
                    </p>
                    <div class="row text-center mt-5">
                        <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                            <i class="bi bi-trophy fa-2x text-warning mb-2"></i>
                            <h5>Best Prices</h5>
                            <p>Find the lowest prices instantly.</p>
                        </div>
                        <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                            <i class="bi bi-shield-check fa-2x text-success mb-2"></i>
                            <h5>Trusted Data</h5>
                            <p>Reliable comparisons from verified sources.</p>
                        </div>
                        <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                            <i class="bi bi-heart fa-2x text-danger mb-2"></i>
                            <h5>User-Focused</h5>
                            <p>Designed for food enthusiasts like you.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>