@model FoodPriceComparison.Models.PriceComparison

@{
    ViewData["Title"] = "Compare Food Prices";
}

<div class="container my-5" data-aos="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow p-4 hover-lift" data-aos="zoom-in">
                <h1 class="text-center mb-4" data-aos="fade-down"><i class="bi bi-bar-chart-line"></i> Compare Food Prices</h1>

                <form asp-action="Index" method="get" class="mb-4" data-aos="fade-up">
                    <div class="mb-3">
                        <label for="selectedRestaurant" class="form-label">Select Restaurant (Vadodara)</label>
                        <select name="selectedRestaurant" id="selectedRestaurant" class="form-select hover-glow">
                            <option value="">All Restaurants</option>
                            @if (ViewBag.Restaurants != null)
                            {
                                foreach (var restaurant in ViewBag.Restaurants)
                                {
                                    <option value="@restaurant" selected="@(Context.Request.Query["selectedRestaurant"] == restaurant.ToString() ? "selected" : null)">@restaurant</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="input-group input-group-lg">
                        <input type="text" name="foodItem" class="form-control" placeholder="Enter food item (e.g., Pizza)" value="@Model.FoodName" aria-label="Search food item" />
                        <button type="submit" class="btn btn-primary hover-glow" id="searchBtn">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>

                @if (Model.Items != null && Model.Items.Any())
                {
                    <div class="alert alert-success mt-4" data-aos="slide-up">
                        <h5>Results for "@Model.FoodName"@(string.IsNullOrEmpty(Context.Request.Query["selectedRestaurant"]) ? "" : $" at {Context.Request.Query["selectedRestaurant"]}")</h5>
                        <p><strong>Lowest Price:</strong> <span class="text-success fw-bold">₹@Model.LowestPrice</span> at <span class="fw-bold">@Model.BestSite</span></p>
                        <small class="text-muted">Data from our database (Vadodara focus). Click "Order" to visit the restaurant page.</small>
                    </div>

                    <!-- Tabs -->
                    <ul class="nav nav-tabs" id="comparisonTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="prices-tab" data-bs-toggle="tab" data-bs-target="#prices" type="button" role="tab">Prices</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">Reviews</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="comparisonTabsContent">
                        <div class="tab-pane fade show active" id="prices" role="tabpanel">
                            <div class="table-responsive mt-3" data-aos="fade-in" data-aos-delay="200">
                                <table class="table table-hover table-striped hover-table">
                                    <thead class="table-dark">
                                        <tr>
                                            <th><i class="bi bi-tag"></i> Name</th>
                                            <th><i class="bi bi-cash"></i> Price</th>
                                            <th><i class="bi bi-shop"></i> Restaurant</th>
                                            <th><i class="bi bi-globe"></i> Site</th>
                                            <th><i class="bi bi-link"></i> Order</th>
                                            <th><i class="bi bi-heart"></i> Favorite</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items.OrderBy(i => i.Price))
                                        {
                                            <tr class="@(item.DeliverySite == Model.BestSite ? "table-success animate-highlight" : "")">
                                                <td>@item.Name</td>
                                                <td class="fw-bold">₹@item.Price</td>
                                                <td>@item.Restaurant</td>
                                                <td>@item.DeliverySite</td>
                                                <td>
                                                    <a href="@(string.IsNullOrEmpty(item.RestaurantUrl) ? GetRestaurantUrl(item.DeliverySite, item.Restaurant) : item.RestaurantUrl)" target="_blank" class="btn btn-sm btn-outline-primary hover-glow">
                                                        <i class="bi bi-arrow-up-right-circle"></i> Order
                                                    </a>
                                                </td>
                                                <td>
                                                    @{
                                                        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                                        var isFavorited = Model.Favorites?.Any(f => f.UserId == userId && f.ItemName == item.Name && f.Restaurant == item.Restaurant) ?? false;
                                                    }
                                                    <form asp-action="AddFavorite" method="post" class="d-inline">
                                                        <input type="hidden" name="itemName" value="@item.Name" />
                                                        <input type="hidden" name="restaurant" value="@item.Restaurant" />
                                                        <button type="submit" class="btn btn-sm @(isFavorited ? "btn-danger" : "btn-outline-danger")">
                                                            <i class="bi @(isFavorited ? "bi-heart-fill" : "bi-heart")"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="reviews" role="tabpanel">
                            <div class="mt-3">
                                @foreach (var restaurant in Model.Items.Select(i => i.Restaurant).Distinct())
                                {
                                    <h5>@restaurant</h5>
                                    <div class="mb-3">
                                        @foreach (var review in Model.Reviews.Where(r => r.Restaurant == restaurant))
                                        {
                                            <div class="border p-2 mb-2">
                                                <strong>@review.Rating/5 Stars</strong> - @review.ReviewText
                                                <small class="text-muted">by User on @review.CreatedAt.ToShortDateString()</small>
                                            </div>
                                        }
                                    </div>
                                    <form asp-action="AddReview" method="post">
                                        <input type="hidden" name="restaurant" value="@restaurant" />
                                        <div class="mb-2">
                                            <label>Rating (1-5)</label>
                                            <input type="number" name="rating" min="1" max="5" class="form-control" required />
                                        </div>
                                        <div class="mb-2">
                                            <label>Review</label>
                                            <textarea name="reviewText" class="form-control" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit Review</button>
                                    </form>
                                    <hr />
                                }
                            </div>
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.FoodName))
                {
                    <div class="alert alert-warning mt-4" data-aos="shake">
                        <i class="bi bi-exclamation-triangle"></i> No items found for "@Model.FoodName"@(string.IsNullOrEmpty(Context.Request.Query["selectedRestaurant"]) ? "" : $" at {Context.Request.Query["selectedRestaurant"]}")". Try a different search or restaurant.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@{
    string GetRestaurantUrl(string site, string restaurant)
    {
        var query = Uri.EscapeDataString(restaurant);
        return site switch
        {
            "Swiggy" => $"https://www.swiggy.com/city/vadodara?q={query}",
            "Zomato" => $"https://www.zomato.com/vadodara/restaurants?q={query}",
            _ => "#"
        };
    }
}

@section Scripts {
    <script>
        // Show loading spinner on form submit
        document.getElementById('searchForm').addEventListener('submit', function() {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('searchBtn').disabled = true;
        });
    </script>
}