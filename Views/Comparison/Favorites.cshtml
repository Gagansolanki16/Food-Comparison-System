@model IEnumerable<FoodPriceComparison.Models.Favorite>

@{
    ViewData["Title"] = "My Favorites";
}

<div class="container my-5" data-aos="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow p-4" data-aos="zoom-in">
                <h1 class="text-center mb-4"><i class="bi bi-heart"></i> My Favorites</h1>
                @if (Model.Any())
                {
                    <ul class="list-group">
                        @foreach (var fav in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @fav.ItemName at @fav.Restaurant
                                <small class="text-muted">@fav.AddedAt.ToShortDateString()</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center">No favorites yet. Add some from search results!</p>
                }
            </div>
        </div>
    </div>
</div>